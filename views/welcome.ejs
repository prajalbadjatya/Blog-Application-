                <li>
                    <form action="/myposts" method="get">

            

                        <button type="submit" class="mypostsnavbar" > My Posts</button>
                       
                    </form>
                </li>
                
        
                <li>
                    <form action="/logout" method="get">

            

                        <button type="submit" class="mypostsnavbar" > Logout </button>
                       
