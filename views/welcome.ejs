    </head>



    




    

    <body>


    <br><br><br><br>


         
         


         <h1 class="welcome" >Welcome <%= name %></h1>
         <br><br>


         
         


         


         <form action="postblog" method="post">
             
            <!-- <input type="textarea"  name="blog1" placeholder="Write here" autocomplete="off"> -->
            <input type="text" class="topic" name="title" placeholder="Enter topic here" autocomplete="off" required>
            <br><br>


            









            <!-- <textarea class="textarea" name="blog1" placeholder="Write here" autocomplete="off" cols="50" rows="5" required></textarea> -->
            <input type="text" class="postcontent"  name="blog1" placeholder="Write here" autocomplete="off" required>

            
            <br><br>
            <button type="submit" class="btn btn-success" >Post</button>
         </form>


         <a id="back-to-top" href="#" class="btn btn-light btn-lg back-to-top" role="button"><i class="fas fa-chevron-up"></i></a>




         <% for(var i=0; i<val.length ; i++) { %>
         <!-- <h1 class="aa"><%=  val[i].post %></h1> -->

         <div class="jumbotron">

            <h1 class="display-4"><%= val[i].title %></h1>

            <br>
            <p class="lead"> <%= val[i].post %> </p>
            <hr class="my-4">
            <p>This post is written by  <%= val[i].author %> </p>
            <!-- <p>The id of the blog is <%= val[i].postid %> </p> -->
            <!-- <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a> -->

            

            

            <% if(val[i].author === name) { %>
                <form action="/deletepost" method="post">

                    <!-- btn-seconday -->
                 <input  class="post_to_be_deleted" type="text" value="<%=val[i].post%>"  name="post_to_be_deleted">
                <button class="btn btn-danger btn-secondary" data-toggle="tooltip" data-placement="top" title="Clicking this will delete this post" >
                    Delete this post

                </button>

                
                
                </form>
            <% } %> 


            <form action="/likepost" method="post">
                <button class="likebtn"><i class="far fa-thumbs-up fa-2x"></i></button>
                <h3> <%=val[i].likecount %> </h3>
                <input class="post_to_be_liked" type="text" value="<%= val[i].postid %>" name="post_to_be_liked">
            </form>

            

            

          </div>

         <% } %>

         <br>
         
         
